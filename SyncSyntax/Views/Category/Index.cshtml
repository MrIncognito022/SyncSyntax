@model IEnumerable<Category>

@{
    ViewData["Title"] ="Categories";
}
<h1>Blog Categories</h1>

<p>
    <a asp-controller ="Category" asp-action="Create" class="btn btn-primary ">Create new Category</a>
</p>
<Table class="table">
    <thead>
        <tr>
            <th>Category Name</td>
            <th>Category Description</td>
            <th>Actions</td>
        </tr>
    </thead>
    <tbody>
       @foreach(var category in Model){
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                 
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm" title="Edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm" title="Delete">
                        <i class="fas fa-trash"></i>
                    </a>
            </td>

        </tr>
       }
    </tbody>
</Table>
