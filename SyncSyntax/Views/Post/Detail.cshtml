@model Post
@{
    ViewData["Title"] = Model.Title;
}

<style>
    .post-detail {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }

    h1 {
        font-size: 2.5em;
    }

    h3 {
        font-size: 1.5em;
        margin-top: 20px;
    }

    p {
        font-size: 1em;
        line-height: 1.6;
    }

    hr {
        margin: 20px 0;
    }

    /* Feature image styles */
    .feature-image {
        width: 100%; /* Makes it responsive */
        height: 500px; /* Set desired height */
        object-fit: cover; /* Ensures the image maintains aspect ratio */
        margin-bottom: 20px;
    }
</style>
<div class="row mb-4">
    <div class="col-12 col-md-6">
       
    </div>
    <div class="col-12 col-md-6 text-end">
        <a asp-action="Create" class="btn btn-secondary rounded  ">Edit Post</a>
        <a asp-action="Create" class="btn btn-danger rounded mx-3 ">Delete Post</a>
    </div>
</div>
<div class="post-detail">
    <h1>@Model.Title</h1>
    <p><strong>By:</strong> @Model.Author | <strong>Published on:</strong> @Model.PublishedDate.ToString("MMMM dd, yyyy")</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>

    @if (!string.IsNullOrEmpty(Model.FeatureImagePath))
    {
        <img src="@Model.FeatureImagePath" alt="@Model.Title" class="feature-image" />
    }

    <hr>

    <div>
        @Html.Raw(Model.Content)
    </div>

    <hr>

    <h3>Comments</h3>

    <div>
        @if (Model.Comments?.Any() ?? false)
        {
            foreach (var comment in Model.Comments)
            {
                <div>
                    <p><strong>@comment.UserName</strong> (@comment.CommentDate.ToString("MMMM dd, yyyy"))</p>
                    <p>@comment.Content</p>
                </div>
            }
        }
        else
        {
            <p>No comments yet.</p>
        }
    </div>
</div>
