@model Post
@{
    ViewData["Title"] = Model.Title;
}

<style>
    .post-detail {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        font-family: Arial, sans-serif;
    }

    h1 {
        font-size: 2.5em;
    }

    h3 {
        font-size: 1.5em;
        margin-top: 20px;
    }

    p {
        font-size: 1em;
        line-height: 1.6;
    }

    hr {
        margin: 20px 0;
    }

</style>

<div class="post-detail">
    <h1>@Model.Title</h1>
    <p><strong>By:</strong> @Model.Author | <strong>Published on:</strong> @Model.PublishedDate.ToString("MMMM dd, yyyy")</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>

    @if (!string.IsNullOrEmpty(Model.FeatureImagePath))
    {
        <img src="@Model.FeatureImagePath" alt="@Model.Title" class="img-fluid mb-4" />
    }

    <hr>

    <div>
        @Html.Raw(Model.Content)
    </div>

    <hr>

    <h3>Comments</h3>

    <div>
        @if (Model.Comments?.Any() ?? false)
        {
            foreach (var comment in Model.Comments)
            {
                <div>
                    <p><strong>@comment.UserName</strong> (@comment.CommentDate.ToString("MMMM dd, yyyy"))</p>
                    <p>@comment.Content</p>
                </div>
            }
        }
        else
        {
            <p>No comments yet.</p>
        }
    </div>
</div>
